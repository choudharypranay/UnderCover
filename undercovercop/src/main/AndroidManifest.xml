<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pranayc.undercovercop"
    android:installLocation="auto"
    android:sharedUserId="com.pranayc">

    <uses-feature android:name="android.hardware.telephony"/>
    <uses-permission android:name="com.pranayc.undercover.SETTINGS" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true">
        <activity android:name="com.pranayc.undercovercop.StatusActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.pranayc.undercovercop.ConfigActivity" />
    </application>

</manifest>
